
        "workbench.colorTheme": "Zenburn",
        
        "editor.cursorBlinking": "smooth",
        "editor.cursorWidth": 3,
        
        // Editor colors
        "editor.tokenColorCustomizations": {
            // Zen Burn
            "[Zenburn]": {
                "numbers": "#f1f1f1",
