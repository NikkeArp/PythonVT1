                    { "scope": "constant.language.boolean.false.cs", "settings": { "foreground": "#eb5252", "fontStyle": "italic" } },
                    {
                        "scope": "keyword.other.class.cs, keyword.other.namespace.cs, keyword.other.enum.cs, keyword.other.struct.cs",
                        "settings": { "foreground": "#a5cf57" }
